            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <Button x:Name="menu" Grid.Row="0" Margin="25" Background="#FFB80000" FontSize="70" FontWeight="Bold" Foreground="#FF00ECEC" >MENU</Button>
            <Button x:Name="Favorite" Grid.Row="1" Margin="25"  Background="#FFB80000" FontSize="70" FontWeight="Bold" Foreground="#FF00ECEC" >Favorites</Button>
            <Button x:Name="toKeyboard" Grid.Row="2" Margin="25" Background="#FFB80000" FontSize="70" FontWeight="Bold" Foreground="#FF00ECEC" Content="  KEY&#xD;&#xA;BOARD"/>
            <Button x:Name="speak" Grid.Row="3" Margin="25" Background="#FFB80000" FontSize="70" FontWeight="Bold" Foreground="#FF00ECEC" Click="speakSelectedText">SPEAK</Button>
            <Button x:Name="unknown" Grid.Row="4" Margin="25" Background="#FFB80000" FontSize="70" FontWeight="Bold" Foreground="#FF00ECEC" >??</Button>

        </Grid>

    </Grid>
